<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff2b2941"
    android:orientation="vertical">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/book" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/regno_studentlog_myt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dp"
            android:drawableLeft="@drawable/username"
            android:drawablePadding="30.0dp"
            android:gravity="left"
            android:hint="Registration No."
            android:inputType="textCapCharacters"
            android:maxLength="9"
            android:paddingBottom="25.0dp"
            android:paddingLeft="15.0dp"
            android:paddingTop="15.0dp"
            android:singleLine="true"
            android:text="13BCE0037"
            android:textColor="#ff79838f"
            android:textColorHint="#ffafbac6" />

        <EditText
            android:id="@+id/pass_studentlog_myt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dp"
            android:drawableLeft="@drawable/mobile"
            android:drawablePadding="30.0dp"
            android:hint="Password"
            android:inputType="text"
            android:paddingBottom="25.0dp"
            android:paddingLeft="15.0dp"
            android:singleLine="true"
            android:text="supermariogotze"
            android:textColor="#ff79838f"
            android:textColorHint="#ffafbac6" />

        <ImageView
            android:id="@+id/capImg_studentlog_myt"
            android:layout_width="140dp"
            android:scaleType="fitXY"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5.0dp" />

        <EditText
            android:id="@+id/capTxt_studentlog_myt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20.0dp"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="30.0dp"
            android:hint="Captcha"
            android:maxLength="6"
            android:paddingBottom="25.0dp"
            android:paddingLeft="15.0dp"
            android:singleLine="true"
            android:textColor="#ff79838f"
            android:textColorHint="#ffafbac6" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/proceedBut_studentlog_myt"
            android:layout_width="fill_parent"
            android:layout_height="60.0dp"
            android:background="#ffd24a58"
            android:text="Proceed"
            android:textColor="#ff2e2e2e"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>