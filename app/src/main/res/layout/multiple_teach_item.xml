<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_daywise"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginTop="150dp"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/name_mult_fac"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_weight="4"
            android:text="Lakshmanan K"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/school_mult_fac"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/name_mult_fac"
            android:layout_weight="6"
            android:text="School of Bio Sciences and Technology"
            android:textSize="17sp"
            android:textStyle="italic" />
    </LinearLayout>
</android.support.v7.widget.CardView>