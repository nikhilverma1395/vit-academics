<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="4dp">


    <RelativeLayout xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:id="@+id/apt_head_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/apt_head_atten"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:textSize="18sp" />

            <TextView
                android:id="@+id/apt_head_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/atten_head_main_perc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp" />

        </LinearLayout>


        <View
            android:id="@+id/line1"
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/apt_head_ll"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:id="@+id/bw_line_apt_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/line1"
            android:layout_marginRight="5dp"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/bw_line_apt_head_percent_calc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/bw_line_apt_head"
            android:textSize="18sp" />

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/minus_float_apt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/bw_line_apt_head"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            materialdesign:iconDrawable="@drawable/minus_32px" />

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/plus_float_apt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/bw_line_apt_head"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            materialdesign:iconDrawable="@drawable/plus_32px" />

        <TextView
            android:id="@+id/result_tv_apt_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bw_line_apt_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>