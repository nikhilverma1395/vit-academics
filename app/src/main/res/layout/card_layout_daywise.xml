<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actor_view"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:elevation="14dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_daywise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/subject_name_daywise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Theory Of Computation"
                android:textSize="22dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/sub_code_daywise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_name_daywise"
                android:layout_margin="8dp"
                android:text="CSE101"
                android:textSize="22dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/venue_daywise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:text="SJT405"
                android:textSize="22dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/slot_daywise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:text="E1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timings_daywise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:text="8:00am - 8:50am"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="22dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>