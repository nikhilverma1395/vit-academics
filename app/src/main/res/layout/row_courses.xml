<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actor_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/transparent"
    android:elevation="14dp"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_slot"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:clickable="true"
        card_view:cardBackgroundColor="@android:color/holo_purple"
        android:focusable="true"
        android:padding="2dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:padding="15dp">

            <TextView
                android:layout_width="80dp"
                android:id="@+id/branch_circle"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/tvcircle"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:padding="10dp"
                android:text="CSE"
                android:textColor="#FDFEFE"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/subject_name"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_below="@id/branch_circle"
                android:text="Theory Of Computation"
                android:textColor="#FDFEFE"
                android:textSize="22sp" />


            <TextView
                android:id="@+id/teacher"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_name"
                android:text="Lakshmanan K."
                android:textColor="#FDFEFE"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="25dp"
                android:text="E1"
                android:textColor="#FDFEFE"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/class_number_slots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textColor="#FDFEFE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:text="75 %"
                android:textColor="#FDFEFE"
                android:textSize="35sp"
                android:textStyle="italic" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>