<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actor_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/courses_card_main_padding_left_right"
    android:background="@android:color/transparent"
    android:elevation="10dp"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/courses_card_main_padding_left_right"
    android:paddingRight="@dimen/courses_card_main_padding_left_right">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_slot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slots_card_size"
        android:clickable="true"
        card_view:cardBackgroundColor="@android:color/holo_purple"
        android:focusable="true"
        android:padding="2dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/courses_card_main_padding_left_right">

            <TextView
                android:layout_width="@dimen/slots_circle_branch"
                android:id="@+id/branch_circle"
                android:layout_height="@dimen/slots_circle_branch"
                android:layout_marginLeft="@dimen/slots_item_margin_left"
                android:layout_alignParentTop="true"
                android:background="@drawable/tvcircle"
                android:gravity="center"
                android:layout_marginBottom="@dimen/slots_circle_margin_bottom"
                android:padding="@dimen/slots_circle_padding"
                android:text="CSE"
                android:textColor="#FDFEFE"
                android:textSize="@dimen/marks_grid_item_bigfont_less" />
            <TextView
                android:id="@+id/subject_name"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/slots_item_margin_left"
                android:layout_below="@id/branch_circle"
                android:text="Theory Of Computation"
                android:textColor="#FDFEFE"
                android:textSize="@dimen/timetable_rv_item_font_code" />


            <TextView
                android:id="@+id/teacher"
                android:layout_marginLeft="@dimen/slots_item_margin_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_name"
                android:text="Lakshmanan K."
                android:textColor="#FDFEFE"
                android:textSize="@dimen/timetable_rv_item_fonts" />

            <TextView
                android:id="@+id/slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="@dimen/slots_item_margin_left"
                android:text="E1"
                android:textColor="#FDFEFE"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/class_number_slots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textColor="#FDFEFE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:text="75 %"
                android:textColor="#FDFEFE"
                android:textSize="@dimen/slots_bigfont_size"
                android:textStyle="italic" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>