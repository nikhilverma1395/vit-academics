<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_daywise"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/rr_facmsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:weightSum="9">

            <TextView
                android:id="@+id/facmsg_subname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="5"
                android:text="Theory Of Computation- CSE208"
                android:textColor="#605d5d"
                android:textSize="@dimen/timetable_rv_item_fonts"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/facmsg_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="3"
                android:padding="4dp"
                android:text="21/9/15 12:23 pm"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageButton
                android:id="@+id/fac_msg_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="11dp"
                android:scaleType="centerInside"
                android:src="@drawable/delete" />
        </LinearLayout>

        <TextView
            android:id="@+id/facmsg_tname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rr_facmsg"
            android:paddingLeft="5dp"
            android:text="Lakshmanan K"
            android:textSize="@dimen/timetable_rv_item_fonts"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/facmsg_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/facmsg_tname"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="Prost! The annual FC Bayern MÃ¼nchen trip to Oktoberfest took  place earlier today - it certainly looks like everyone had a fabulous time, it certainly looks like everyone had a fabulous time."
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>
</android.support.v7.widget.CardView>