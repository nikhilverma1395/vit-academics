<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_daywise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/grade_card_padding"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/subname_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="4"
                android:text="Computer Programming and Problem Solving"
                android:textSize="@dimen/grade_row_font" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/grade_tv"
                    android:layout_width="@dimen/circle_dimen_grade"
                    android:layout_height="@dimen/circle_dimen_grade"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/tvcircle"
                    android:gravity="center"
                    android:text="B"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/circle_font_size" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>