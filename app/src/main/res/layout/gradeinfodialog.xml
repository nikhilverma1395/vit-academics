<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grade_info_margin"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_dialog_gradeinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gradeinfo_dsize"
        android:clickable="true"
        android:focusable="true"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground">

            <View
                android:id="@+id/head_ginfo"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#ff669900" />

            <TextView
                android:id="@+id/name_gradeinfo"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gradeinfo_mleft"
                android:layout_marginTop="@dimen/gradeinfo_mtop"
                android:text="Computer Programming and Problem Solving"
                android:textColor="#fff"
                android:textSize="@dimen/grade_info_name_font" />

            <TextView
                android:id="@+id/code_gradeinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_gradeinfo"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:text="CSE208"
                android:textColor="#fff"
                android:textSize="@dimen/timetable_rv_item_font_code" />

            <TextView
                android:id="@+id/grade_gradeinfo"
                android:layout_width="@dimen/gradeinfocirclesize"
                android:layout_height="@dimen/gradeinfocirclesize"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_marginTop="@dimen/gradeinfocircle_mtop"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="A"
                android:textColor="#fff"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/head_ginfo"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="45dp"
                android:paddingRight="20dp"
                android:paddingTop="35dp">

                <TextView
                    android:id="@+id/ctype_ginfodialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Course Type"
                    android:textColor="#b69d9d9d"
                    android:textSize="@dimen/timetable_rv_item_font_code" />

                <TextView
                    android:id="@+id/credit_ginfodialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Credits"
                    android:textColor="#b69d9d9d"
                    android:textSize="@dimen/timetable_rv_item_font_code" />

                <TextView
                    android:id="@+id/examheld_ginfodialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Exam Held"
                    android:textColor="#b69d9d9d"
                    android:textSize="@dimen/timetable_rv_item_font_code" />

                <TextView
                    android:id="@+id/examres_ginfodialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Exam Result"
                    android:textColor="#b69d9d9d"
                    android:textSize="@dimen/timetable_rv_item_font_code" />

                <TextView
                    android:id="@+id/copt_ginfodialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Course Option"
                    android:textColor="#b69d9d9d"
                    android:textSize="@dimen/timetable_rv_item_font_code" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>