<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    android:background="@android:color/holo_blue_dark"
    android:padding="6dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/rowsEditTextId"
                style="@style/_0width"
                android:hint="Rows"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:nextFocusRight="@+id/columnsEditTextId">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/columnsEditTextId"
                style="@style/_0width"
                android:hint="Columns"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:nextFocusRight="@+id/iterationsEditTextId" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clearButtonId"
                style="@style/_0width"
                android:onClick="clearButtonClick"
                android:text="Clear" />

            <Button
                android:id="@+id/randomButtonId"
                style="@style/_0width"
                android:onClick="randomButtonClick"
                android:text="Random" />

            <Button
                android:id="@+id/calculateButtonId"
                style="@style/_0width"
                android:onClick="calculateButtonClick"
                android:text="Calculate" />
        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tableLayoutId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </HorizontalScrollView>
    </LinearLayout>